{
  "$ref": "#/definitions/blog",
  "definitions": {
    "blog": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "subtitle": {
          "type": "string"
        },
        "authorFallback": {
          "type": "string",
          "default": "Anonymous"
        },
        "contactEmail": {
          "type": "string",
          "format": "email"
        },
        "canonicalUrl": {
          "type": "string",
          "format": "uri"
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "maxLength": 200
        },
        "publishDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "updatedDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "isDraft": {
          "type": "boolean"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "readingTime": {
          "type": "number"
        },
        "viewCount": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "status": {
          "type": "string",
          "enum": [
            "draft",
            "published",
            "archived"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "maxItems": 5
        },
        "primaryAuthor": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "collection": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "collection"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "slug": {
                  "type": "string"
                },
                "collection": {
                  "type": "string"
                }
              },
              "required": [
                "slug",
                "collection"
              ],
              "additionalProperties": false
            }
          ]
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "contactEmail",
        "canonicalUrl",
        "description",
        "publishDate",
        "isDraft",
        "readingTime",
        "status",
        "tags",
        "categories",
        "primaryAuthor"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}